header.header_menu
  .row
    .large-6.columns
      h1#logo[title="Voltar para a p√°gina inicial"]= link_to "MateriaBrasil", root_path
      nav.main_nav
        = link_to t("common.about"), about_path(anchor: '/i/sobre')
        = link_to t("common.portfolio"), portfolio_path(anchor: 'design'), id: 'portfolio_link'
        = link_to t("common.contact"), about_path(anchor: '/i/contato')
    .large-6.columns
      aside.search_account
        .main_actions_nav.left
          = link_to t("common.explore"), explore_path, class: "main_action"
          = link_to t("common.submit"), submit_path, class: "main_action"
        section.search_area
          form.search_form action=search_path
            input[type="text" name="q" value="" placeholder="#{t "common.search_the_site"}" class='field']
        section.account_nav
          - if current_user
            section.user_section
              span.icon.user
              = t "common.my_account"
              span.arrow
                |&#x25BE
              ol.options
                /li.favorites= link_to "Favoritos", session_path(current_user), method: :delete, class: 'icon-star'
                li.logout= link_to destroy_user_session_path, method: :delete do
                  span.icon.forward
                  = t('common.logout')
          - else
            = link_to t('common.login_signin'), new_user_session_path(), class: "login-bt"
