source 'https://rubygems.org'

gem 'rails', '~> 3.2.6'

group :development, :test do
  gem 'taps'
  gem 'sqlite3'
end

group :production do
  gem 'pg'
end

# Authentication
gem 'omniauth'
gem 'omniauth-facebook'

# Tools
gem 'inherited_resources'
gem 'has_scope'
